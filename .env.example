# Kilele Hiking App - Production Environment Variables
# Copy this to .env and fill in your actual values

# ============================================
# DATABASE CONFIGURATION
# ============================================
# Development (SQLite)
DATABASE_URL=sqlite:///./kilele.db

# Production (PostgreSQL) - Uncomment and use one of these:
# Neon (Free tier): postgresql://user:password@ep-xxx.neon.tech/kilele
# Supabase: postgresql://postgres:password@db.xxx.supabase.co:5432/postgres
# Railway: postgresql://user:password@containers-us-west-xxx.railway.app:5432/railway
# DATABASE_URL=postgresql://username:password@host:port/database_name

# ============================================
# SECURITY & AUTHENTICATION
# ============================================
# Secret key for JWT tokens (generate with: openssl rand -hex 32)
SECRET_KEY=your-secret-key-here-change-this-in-production

# Session token expiry (days)
SESSION_EXPIRY_DAYS=30

# Password hashing rounds (higher = more secure but slower)
BCRYPT_ROUNDS=12

# ============================================
# CLOUDINARY IMAGE STORAGE
# ============================================
# Sign up at https://cloudinary.com (free tier: 25GB storage, 25GB bandwidth)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# ============================================
# EMAIL SERVICE (SendGrid)
# ============================================
# Sign up at https://sendgrid.com (free tier: 100 emails/day)
SENDGRID_API_KEY=your-sendgrid-api-key
FROM_EMAIL=noreply@kilele.app
SUPPORT_EMAIL=support@kilele.app

# Alternative: SMTP (Gmail, Outlook, etc.)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# SMTP_FROM=noreply@kilele.app

# ============================================
# ERROR TRACKING (Sentry)
# ============================================
# Sign up at https://sentry.io (free tier: 5k errors/month)
SENTRY_DSN=your-sentry-dsn-here
SENTRY_ENVIRONMENT=production

# ============================================
# API CONFIGURATION
# ============================================
# Backend API URL (update after deployment)
API_BASE_URL=http://localhost:8000
# Production: https://your-api.railway.app or https://your-api.onrender.com

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:8501,https://your-app.streamlit.app

# ============================================
# APPLICATION SETTINGS
# ============================================
# Environment (development, staging, production)
ENVIRONMENT=development

# Debug mode (set to False in production)
DEBUG=True

# App timezone
TIMEZONE=Africa/Nairobi

# Max upload size (MB)
MAX_UPLOAD_SIZE_MB=10

# ============================================
# RATE LIMITING
# ============================================
# API rate limits (requests per minute)
RATE_LIMIT_LOGIN=5
RATE_LIMIT_API=60
RATE_LIMIT_UPLOAD=10

# ============================================
# BACKUP CONFIGURATION
# ============================================
# S3 bucket for database backups (optional)
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_BACKUP_BUCKET=kilele-backups
# AWS_REGION=us-east-1

# ============================================
# ANALYTICS (Optional)
# ============================================
# GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# ============================================
# FEATURE FLAGS
# ============================================
ENABLE_2FA=True
ENABLE_WEARABLES=True
ENABLE_SOCIAL=True
ENABLE_MESSAGING=True
ENABLE_ACHIEVEMENTS=True
